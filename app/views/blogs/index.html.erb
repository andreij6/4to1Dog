<div class="row">
 
    <!-- Main Blog Content -->
    <div class="large-9 columns" role="content">
 		<% @blogs.each do |blog| %>
      <article>
 
        <h3><%= blog.title %></h3>
        <h6>Written by <a href="#">John Smith</a> <%= (blog.created_at).strftime("%b %-d %Y") %></h6>
 
        <div class="row">
          <div class="large-12 columns">
            <p><%= dat_markdown(blog.body.truncate(700)) %></p>
      </article>
 			<%= link_to 'Show', blog %>
    		<%= link_to 'Edit', edit_blog_path(blog) %>
    		<%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
      <hr />
 
      <article>
 		<% end %>
    </div>
 
    <!-- End Main Content -->
 
 
