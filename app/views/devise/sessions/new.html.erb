<br />
<div class="row">
	<div class="span4">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well form-vertical well-small"}) do |f| %>

		
			<h1 class="optima">Sign In</h1><br /><br />
			<h1 class="optima">Email</h1>
			<%= f.input :email, :label => false %>
			<h1 class="optima">Password</h1>
			<%= f.input :password, :label => false  %>

	  	<% if devise_mapping.rememberable? -%>
	    	<%= f.input :remember_me, as: :boolean, inline_label: "Remember Me", label: false %>
	  	<% end -%>

	  	<%= f.button :submit, "Sign In", class: 'btn btn-primary btn-block' %>
		
	<% end %>

	</div>

	
</div>