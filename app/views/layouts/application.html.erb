<!DOCTYPE html>
<html>
<head>
  <title>4to1Dog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "vendor/custom.modernizr" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'rails.png' %>
</head>
<body>
	<div class="contain-to-grid">
		<nav class="top-bar">
	    <ul class="title-area">
	      <!-- Title Area -->
	      <li class="name">
	        <h1>
	          <% if user_signed_in? %>
					<%= link_to "4to1Dog", activities_path, class: 'brand' %>
				<% else %>
					<%= link_to "4to1Dog", root_path, class: 'brand' %>
				<% end %>
	        </h1>
	      </li>
	      <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
	    </ul>
	 
	    <section class="top-bar-section">
	      <!-- Right Nav Section -->
	      <ul class="right">
	        <li class="divider"></li>
	        <% if user_signed_in? %>
	        <li class="has-dropdown">
	          <a href="#">Social</a>
	          <ul class="dropdown">
	            <li><%= link_to "All Statuses", feed_path %></li>
	            <li><%= link_to "Forum", forums_root_path %></li>
	            <li><%= link_to "Blogs", blogs_path %></li>
	          </ul>
	        </li>
	        <li class="divider"></li>
	        <li class="has-dropdown">
	        <%= link_to "Training", '#' %>
	          <ul class="dropdown">
	            <li><%= link_to "Videos", videos_path %></li>
	            <li><%= link_to "Forum", forums_root_path %></li>
	            <li><%= link_to "Software Tutorial", '#' %></li>
	          </ul>
	        </li>
	       	<li class="divider"></li>
	        <li><%= link_to "Sign Out", logout_path %></li>
	        <% else %>
	        <li>
	          <%= link_to "Sign Up", register_path, class: 'button' %>
	        </li>
	        <li class="divider"></li>
	        <li><%= link_to "Sign In", login_path %></li>
	        <%end%>
	      </ul>
	    </section>
	  </nav>
	</div>
	<div class="row">
		<%= render_breadcrumbs %>
		
		<% flash.each do |type, message| %>
			<div  data-alert class="alert-box <%= flash_class type %>">
				<%= message %>
				<a href="#" class="close">&times;</a>
			</div>
		<% end %>
	</div>  
		<%= yield %>
	   <footer>
        <div class="large-12 columns"><hr />
            <div class="row">
 
              <div class="large-6 columns">
                  <p>&copy; <%= (time = Time.new).year %> 4to1Dog.com</p>
              </div>
 
              <div class="large-6 columns">
                  <ul class="inline-list right">
                    <li><a href="#">Link 1</a></li>
                    <li><a href="#">Link 2</a></li>
                    <li><a href="#">Link 3</a></li>
                    <li><a href="#">Link 4</a></li>
                  </ul>
              </div>
 
            </div>
        </div>
      </footer>
	 <%= javascript_include_tag "application" %>
</body>
</html>
