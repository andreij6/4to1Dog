<div class="row">
<div class="large-12 columns spaced">
	
</div>
	<div clas="large-1 columns">
		.
	</div>
	<!-- body of the dashbord-->
	<div class="large-10 large-offset-1 him">
		<div class="large-6 columns timed">
			<p class="clock">
				<%= Time.now.strftime("%-I:%M")%>
			</p>
			<span><%= Time.now.strftime("%A %b %-d") %></span>
			
		</div>
		<%= link_to forums_root_path do%>
		<div class="large-6 columns side" id="top">
			<p class='sections'>
				&nbsp;&Omicron;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				FORUM
			</p>
		</div>
		<% end %>
		<%= link_to blogs_path do%>
		<div class="large-6 columns side" id="side2">
			<p class='sections'>
				&nbsp;&Omicron;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				BLOG
			</p>
		</div>
		<% end %>
		<%= link_to videos_path do%>
		<div class="large-6 columns side" id="thirdside">
			<p class='sections'>
				&nbsp;&Omicron;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				VIDEOS
			</p>
		</div>
		<% end %>
		<%= link_to '#' do%>
		<div class="large-6 columns side" id="side4">
			
			<p class='sections'>
				&nbsp;&Omicron;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				STORE
			</p>
		</div><% end %><br />
		<div class="large-6 columns bottom" id='bleft'>
			<h1 class="dash_statusHead">Latest Statuses</h1>
			<p class="dash_status">
				<span><%= Status.last.user.profile_name.downcase %></span>
				"<%= Status.last.content %>"
				
			</p>
			<p class="dash_status">
				<span><%= Status.all[-2].user.profile_name.downcase %></span>
				"<%= Status.all[-2].content %>"
				
			</p>
			<p class="dash_status">
				<span><%= Status.all[-3].user.profile_name.downcase %></span>
				"<%= Status.all[-3].content %>"
				
			</p>
			<p class="dash_status">
				<span><%= Status.all[-4].user.profile_name.downcase %></span>
				"<%= Status.all[-4].content %>"
				
			</p>
			<%= link_to new_status_path do %>
		 	<div class="buttoned">
		 		New Status
		 	</div>
	 		<% end %>
		</div>
		<div class="large-6 columns bottom" id='bright'>
			<h2 class="txt">Latest Blog</h2>
				
				<% blogg = Blog.last.body %>
				<p>
				<span class="firstcharacter">
					<%= dropCa(blogg) %>
				</span>
				<%= Blog.last.body[1..-1].truncate(400)%>
				</p>
				<p class="dash_author"><%= Blog.last.user.profile_name.downcase %></p>
				
		</div>
	</div>
	
</div>

